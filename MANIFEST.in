# Include documentation
include README.md
include README_FFMPEG.md
include LICENSE
include requirements.txt

# Include package data
recursive-include mkv2mp4ui *.py
recursive-include mkv2mp4ui *.ui
recursive-include mkv2mp4ui *.qrc
recursive-include mkv2mp4ui *.ico

# Exclude development files
exclude setup.cfg
exclude .gitignore
exclude .github
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *~
recursive-exclude * .DS_Store

# Exclude FFmpeg binaries (will be downloaded automatically)
exclude *.exe
exclude *.dll
exclude *.dll.a